/* Welcome Page Styles - Mobile First */
.welcome-container {
  min-height: 100vh;
  padding: var(--space-lg) var(--space-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--gradient-dark);
  position: relative;
  overflow: hidden;
}

.welcome-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
  pointer-events: none;
  animation: float-bg 20s ease-in-out infinite;
}

.welcome-container::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -30%;
  width: 80%;
  height: 80%;
  background: radial-gradient(circle, rgba(20, 184, 166, 0.1) 0%, transparent 70%);
  pointer-events: none;
  animation: float-bg 15s ease-in-out infinite reverse;
}

@keyframes float-bg {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(20px, -20px) scale(1.1);
  }
}

/* Hero Section */
.welcome-hero {
  text-align: center;
  max-width: 650px;
  margin-bottom: var(--space-2xl);
  position: relative;
  z-index: 1;
}

/* Brand Logo */
.brand-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-md);
  margin-bottom: var(--space-lg);
}

.logo-image {
  width: auto;
  height: 120px;
  object-fit: contain;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  animation: fadeInScale 0.8s ease-out;
}

@media (max-width: 480px) {
  .logo-image {
    height: 100px;
  }
}

@keyframes fadeInScale {
  0% {
    opacity: 0;
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.logo-icon {
  font-size: 3rem;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

.logo-text {
  font-size: 2.5rem;
  font-weight: var(--font-weight-bold);
  letter-spacing: -0.02em;
  margin: 0;
  background: linear-gradient(135deg, var(--color-primary-light), var(--color-secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.logo-rhythm {
  color: var(--color-secondary);
  -webkit-text-fill-color: var(--color-secondary);
}

.brand-tagline {
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.15em;
  margin-bottom: var(--space-xl);
  font-weight: var(--font-weight-semibold);
}

/* Trust Indicators */
.trust-indicators {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-lg);
  flex-wrap: wrap;
  margin-bottom: var(--space-2xl);
  position: relative;
  z-index: 1;
}

.trust-badge {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  padding: var(--space-sm) var(--space-md);
  background: rgba(139, 92, 246, 0.1);
  border: 1px solid rgba(139, 92, 246, 0.3);
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  font-weight: var(--font-weight-medium);
}

.trust-icon {
  font-size: var(--font-size-base);
}

.trust-text {
  white-space: nowrap;
}

.hero-divider {
  width: 60px;
  height: 3px;
  background: var(--gradient-primary);
  margin: 0 auto var(--space-xl);
  border-radius: var(--radius-full);
}

.hero-title {
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-bold);
  line-height: var(--line-height-tight);
  margin-bottom: var(--space-md);
}

.text-gradient {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  line-height: var(--line-height-relaxed);
  max-width: 500px;
  margin: 0 auto;
}

/* Story Preview Cards */
.story-preview {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-md);
  width: 100%;
  max-width: 900px;
  margin-bottom: var(--space-2xl);
  position: relative;
  z-index: 1;
}

.story-card {
  background-color: var(--color-bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--space-lg);
  text-align: center;
  transition: all var(--transition-base);
  border: 2px solid transparent;
}

.story-card:hover {
  transform: translateY(-4px);
  border-color: var(--color-primary);
  box-shadow: var(--shadow-xl);
}

.story-icon {
  font-size: 2.5rem;
  margin-bottom: var(--space-md);
}

.story-card h3 {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--space-sm);
  color: var(--color-text-primary);
}

.story-card p {
  color: var(--color-text-secondary);
  margin: 0;
  line-height: var(--line-height-relaxed);
}

/* Journey Stats */
.journey-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-xl);
  background-color: var(--color-bg-secondary);
  border-radius: var(--radius-xl);
  padding: var(--space-xl);
  margin-bottom: var(--space-2xl);
  width: 100%;
  max-width: 600px;
  position: relative;
  z-index: 1;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-primary-light);
  line-height: 1;
  margin-bottom: var(--space-xs);
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-divider {
  width: 2px;
  height: 40px;
  background-color: var(--color-bg-tertiary);
}

/* Modules Preview */
.modules-preview {
  width: 100%;
  max-width: 900px;
  margin-bottom: var(--space-2xl);
  position: relative;
  z-index: 1;
}

.modules-title {
  text-align: center;
  font-size: var(--font-size-2xl);
  margin-bottom: var(--space-sm);
}

.modules-subtitle {
  text-align: center;
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
  margin-bottom: var(--space-xl);
}

.modules-hint {
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
  margin-top: var(--space-lg);
  font-style: italic;
}

.modules-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-md);
}

.module-preview-card {
  background-color: var(--color-bg-secondary);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  display: flex;
  align-items: center;
  gap: var(--space-md);
  transition: all var(--transition-base);
  border: 2px solid transparent;
  position: relative;
  overflow: hidden;
}

.module-preview-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  opacity: 0;
  transition: opacity var(--transition-base);
}

.module-preview-card.clickable {
  cursor: pointer;
}

.module-preview-card.clickable:hover {
  border-color: var(--color-primary);
  transform: translateY(-2px);
  box-shadow: var(--shadow-xl);
}

.module-preview-card.clickable:hover::before {
  opacity: 0.05;
}

.module-preview-card.clickable:hover .module-arrow {
  transform: translateX(4px);
  opacity: 1;
}

.module-number {
  width: 32px;
  height: 32px;
  border-radius: var(--radius-full);
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-sm);
  flex-shrink: 0;
}

.module-emoji {
  font-size: 2rem;
  flex-shrink: 0;
}

.module-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.module-name {
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-lg);
}

.module-description {
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.module-meta {
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
}

.module-arrow {
  font-size: var(--font-size-2xl);
  color: var(--color-primary);
  opacity: 0;
  transform: translateX(-4px);
  transition: all var(--transition-base);
}

/* Call to Action */
.welcome-cta {
  width: 100%;
  max-width: 500px;
  text-align: center;
  margin-bottom: var(--space-xl);
  position: relative;
  z-index: 1;
}

.cta-note {
  margin-top: var(--space-md);
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
}

/* Footer */
.welcome-footer {
  text-align: center;
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  padding: var(--space-xl) 0;
  position: relative;
  z-index: 1;
  margin-top: var(--space-2xl);
}

.footer-brand {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-sm);
  margin-bottom: var(--space-xs);
}

.footer-icon {
  font-size: var(--font-size-lg);
}

.footer-text {
  font-size: var(--font-size-sm);
}

.footer-text strong {
  background: linear-gradient(135deg, var(--color-primary-light), var(--color-secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: var(--font-weight-bold);
}

.footer-tagline {
  font-size: var(--font-size-xs);
  color: var(--color-text-muted);
  margin: 0;
  font-style: italic;
}

/* Loading State */
.welcome-loading {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-lg);
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid var(--color-bg-tertiary);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* Error State */
.welcome-error {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-lg);
  padding: var(--space-xl);
  text-align: center;
}

.error-icon {
  font-size: 4rem;
}

/* Tablet Styles */
@media (min-width: 768px) {
  .welcome-container {
    padding: var(--space-2xl) var(--space-xl);
  }
  
  .logo-image {
    height: 140px;
  }
  
  .hero-emoji {
    font-size: 5rem;
  }
  
  .hero-title {
    font-size: var(--font-size-4xl);
  }
  
  .story-preview {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .modules-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Desktop Styles */
@media (min-width: 1024px) {
  .logo-image {
    height: 160px;
  }

  .welcome-hero {
    margin-bottom: var(--space-3xl);
  }
  
  .story-preview {
    margin-bottom: var(--space-3xl);
  }
}
